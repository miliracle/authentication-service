{
  "private": true,
  "name": "authentication-service",
  "version": "0.0.1",
  "author": "Miliracle <nguyennhathan126@gmail.com> (https://github.com/miliracle)",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "pre-commit": "pnpm run --filter \"@root-auth/*\" pre-commit && prettier --write .",
    "prepare": "husky",
    "clean": "rimraf \"**/node_modules\" && pnpm -r clean",
    "fresh": "pnpm clean && pnpm i",
    "nuke": "rimraf pnpm-lock.yaml && pnpm fresh",
    "format": "prettier",
    "format:check": "pnpm format --check --debug-check .",
    "format:fix": "pnpm format --write ."
  }
}
